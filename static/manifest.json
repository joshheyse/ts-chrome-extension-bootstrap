{
  "manifest_version": 2,
  "name": "TS Chrome Extension",
  "version": "0.2",
  "description": "A Chrome Extension Written in Typescript Using Webpack",
  "icons": {
    "128": "icon.png"
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["*://*.google.com/*"],
    "js": ["content.js"]
  }],
  "permissions": [
    "tabs"
  ]
}
